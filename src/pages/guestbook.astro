---
import Base from '../layouts/Base.astro';
import GuestBook from '../components/guestbook/GuestBook.svelte';

export const prerender = false;
---

<Base title="Guest Book - Ian Hogers" description="Sign Ian's guest book! Leave a note, doodle, or just say hi." side="personal">
  <Fragment slot="head">
    <link rel="preload" href="/assets/guestbook/book-sprite.webp" as="image" type="image/webp" />
    <link rel="preload" href="/assets/pixel-art/decorative/sample-bunny.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/sound_on.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/sound_off.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/cancel.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/confirm.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/btn-discard.png" as="image" />
    <link rel="preload" href="/assets/pixel-art/ui/btn-seal.png" as="image" />
  </Fragment>
  <div class="guestbook-wrapper">
    <GuestBook client:load />
  </div>
  <p class="guestbook-credit">
    Book animation by <a href="https://codepen.io/Maseone/pen/WbbGxeO" target="_blank" rel="noopener noreferrer">Maseone</a> (<a href="https://x.com/troshkin_pavel" target="_blank" rel="noopener noreferrer">@troshkin_pavel</a>)
  </p>
</Base>

<style>
  .guestbook-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 70vh;
  }
  .guestbook-credit {
    text-align: center;
    font-family: 'Grand9KPixel', monospace;
    font-size: 0.55rem;
    color: #6b5e50;
    margin-top: 1rem;
    image-rendering: pixelated;
  }
  .guestbook-credit a {
    color: #b388ff;
    text-decoration: none;
  }
  .guestbook-credit a:hover {
    text-decoration: underline;
  }
</style>
