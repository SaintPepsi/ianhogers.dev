---
// Gallery.astro — full-bleed masonry image gallery
// Usage: <Gallery> ![alt](/path.webp) </Gallery>
// Or with pixel-box wrappers: <Gallery><div class="pixel-box">...</div></Gallery>
// Pure CSS masonry via columns — no cropping, aspect ratios preserved.
---

<div class="gallery-breakout">
  <div class="gallery-masonry">
    <slot />
  </div>
</div>

<style>
  .gallery-breakout {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
    padding: 1.5rem 1rem;
  }

  .gallery-masonry {
    columns: 2;
    column-gap: 0.5rem;
    max-width: 90rem;
    margin: 0 auto;
  }

  /* Prevent items from breaking across columns */
  .gallery-masonry :global(> *) {
    break-inside: avoid;
    margin-bottom: 0.5rem;
  }

  /* Images: full width, natural aspect ratio */
  .gallery-masonry :global(img) {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 0;
    display: block;
  }

  /* Reset MDX <p> wrappers */
  .gallery-masonry :global(p) {
    margin: 0;
    break-inside: avoid;
    margin-bottom: 0.5rem;
  }

  /* Pixel-box children */
  .gallery-masonry :global(> div) {
    min-width: 0;
  }

  @media (min-width: 768px) {
    .gallery-masonry {
      columns: 3;
    }
  }

  @media (min-width: 1024px) {
    .gallery-breakout {
      padding: 2rem 2rem;
    }
    .gallery-masonry {
      columns: 4;
    }
  }
</style>
